{
  "date": {
    "type": "string",
    "pattern": "^\\d\\d\\d\\d-\\d\\d-\\d\\d$"
  },
  "category_id": {
    "type": "integer",
    "minimum": 1
  },
  "title": {
    "type": "string",
    "minLength": 1
  },
  "description": {
    "type": "string"
  },
  "tags": {
    "type": "array",
    "items": {
      "type": "string",
      "minLength": 1
    }
  },
  "splits": {
    "type": "array",
    "items": {"$ref": "#/split"}
  },
  "split": {
    "type": "object",
    "properties": {
      "person_id": {"$ref": "#/person_id"},
      "amount": {"$ref": "#/amount"}
    },
    "required": ["person_id", "amount"],
    "additionalProperties": false
  },
  "person_id": {
    "type": "integer",
    "minimum": 1
  },
  "amount": {
    "type": "number",
    "minimum": 0.01
  }
}
